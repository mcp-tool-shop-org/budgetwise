<Page
    x:Class="BudgetWise.App.Views.Diagnostics.DiagnosticsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="24" RowDefinitions="Auto,Auto,Auto,*" RowSpacing="12" MaxWidth="1200" HorizontalAlignment="Left">
        <TextBlock Text="Diagnostics" FontSize="28" FontWeight="SemiBold" />

        <StackPanel Grid.Row="1" Spacing="8">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Refresh" Command="{Binding RefreshCommand}" />
                <Button Content="Copy diagnostics" Command="{Binding CopyDiagnosticsCommand}" />
            </StackPanel>

            <TextBlock Text="Copy diagnostics creates a small text bundle you can share for support. It includes app version, basic configuration, and recent engine call metadata â€” not your transaction list."
                       TextWrapping="Wrap"
                       Opacity="0.75"
                       FontSize="13" />
        </StackPanel>

        <!-- App Info Section -->
        <Border Grid.Row="2" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16,12">
            <StackPanel Spacing="8">
                <TextBlock Text="App Info" FontSize="16" FontWeight="SemiBold" />

                <Grid ColumnDefinitions="80,*" RowDefinitions="Auto,Auto" RowSpacing="4">
                    <TextBlock Text="Version:" Opacity="0.8" />
                    <TextBlock Grid.Column="1" Text="{Binding AppVersionText}" FontFamily="Consolas" />

                    <TextBlock Grid.Row="1" Text="Database:" Opacity="0.8" />
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding DatabasePathText}" FontFamily="Consolas" TextTrimming="CharacterEllipsis" />
                </Grid>
            </StackPanel>
        </Border>

        <!-- Main content area -->
        <ScrollViewer Grid.Row="3">
            <StackPanel Spacing="12">
                <!-- Engine Call History with column headers -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Recent Engine Calls (UTC)" FontSize="16" FontWeight="SemiBold" />

                    <!-- Column headers -->
                    <Grid ColumnDefinitions="180,*,90,70,140" ColumnSpacing="12" Padding="4" Opacity="0.7">
                        <TextBlock Text="Timestamp" FontWeight="SemiBold" FontSize="12" />
                        <TextBlock Grid.Column="1" Text="Operation" FontWeight="SemiBold" FontSize="12" />
                        <TextBlock Grid.Column="2" Text="Duration" FontWeight="SemiBold" FontSize="12" HorizontalAlignment="Right" />
                        <TextBlock Grid.Column="3" Text="Status" FontWeight="SemiBold" FontSize="12" />
                        <TextBlock Grid.Column="4" Text="Error" FontWeight="SemiBold" FontSize="12" />
                    </Grid>

                    <ListView ItemsSource="{Binding Recent}" SelectionMode="None">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Margin" Value="0,1" />
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="180,*,90,70,140" ColumnSpacing="12" Padding="8,4"
                                      Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                      CornerRadius="4">
                                    <TextBlock Text="{Binding WhenUtc}" FontFamily="Consolas" FontSize="12" VerticalAlignment="Center" />
                                    <TextBlock Grid.Column="1" Text="{Binding Operation}" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" />
                                    <TextBlock Grid.Column="2" Text="{Binding ElapsedMs}" HorizontalAlignment="Right" FontFamily="Consolas" FontSize="12" VerticalAlignment="Center" />
                                    <TextBlock Grid.Column="3" Text="{Binding Success}" VerticalAlignment="Center" />
                                    <TextBlock Grid.Column="4" Text="{Binding ErrorCode}" Opacity="0.8" Foreground="Tomato" VerticalAlignment="Center" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

                <!-- XRPL Section - Collapsed Expander (Experimental) -->
                <Expander Header="XRPL Integration (Experimental)" IsExpanded="False" HorizontalAlignment="Stretch">
                    <StackPanel Spacing="8" Padding="8">
                        <InfoBar IsOpen="True" IsClosable="False" Severity="Informational"
                                 Title="Future Roadmap"
                                 Message="XRPL integration is experimental and not required for normal budgeting. This section is for developers testing Web3 connectivity." />

                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="Web3:" VerticalAlignment="Center" Opacity="0.8" />
                            <TextBlock Text="{Binding Web3StatusText}" VerticalAlignment="Center" FontFamily="Consolas" />
                            <TextBlock Text=" " />
                            <TextBlock Text="RPC:" VerticalAlignment="Center" Opacity="0.8" />
                            <TextBlock Text="{Binding XrplRpcUrlText}" VerticalAlignment="Center" FontFamily="Consolas" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Button Content="server_info" Command="{Binding XrplServerInfoCommand}" />
                            <TextBox Width="360"
                                     Header="Account (r...)"
                                     Text="{Binding XrplAccountAddress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <Button Content="account_info" Command="{Binding XrplAccountInfoCommand}" />
                            <ProgressRing IsActive="{Binding IsXrplLoading}" Width="18" Height="18" />
                        </StackPanel>

                        <TextBlock Text="{Binding XrplErrorText}"
                                   Foreground="Tomato"
                                   TextWrapping="Wrap"
                                   Visibility="{Binding XrplErrorText, Converter={StaticResource StringToVisibilityConverter}}" />

                        <TextBox Text="{Binding XrplResultJson}"
                                 IsReadOnly="True"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 FontFamily="Consolas"
                                 Height="200"
                                 Visibility="{Binding XrplResultJson, Converter={StaticResource StringToVisibilityConverter}}" />
                    </StackPanel>
                </Expander>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
