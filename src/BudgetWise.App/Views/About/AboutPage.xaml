<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BudgetWise.App.Views.About.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer Padding="24">
        <StackPanel Spacing="24" MaxWidth="600" HorizontalAlignment="Left">

            <!-- App header -->
            <StackPanel Orientation="Horizontal" Spacing="16">
                <Image Source="ms-appx:///Assets/BudgetWise_256.png" Width="64" Height="64" />
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="BudgetWise" Style="{StaticResource TitleTextBlockStyle}" />
                    <TextBlock x:Name="VersionText" Text="Version 1.0.0" Opacity="0.7" />
                </StackPanel>
            </StackPanel>

            <!-- Tagline -->
            <TextBlock Text="Envelope budgeting for Windows — give every dollar a job."
                       Style="{StaticResource SubtitleTextBlockStyle}"
                       TextWrapping="Wrap" />

            <!-- Description -->
            <TextBlock TextWrapping="Wrap" Opacity="0.9">
                BudgetWise helps you take control of your money using the envelope budgeting method.
                Instead of wondering where your money went, you decide where it goes before you spend it.
                Every dollar gets assigned to an envelope, and you can only spend what's in each envelope.
            </TextBlock>

            <!-- Links section -->
            <StackPanel Spacing="12">
                <TextBlock Text="Links" Style="{StaticResource SubtitleTextBlockStyle}" />

                <HyperlinkButton Content="GitHub Repository"
                                 NavigateUri="https://github.com/mcp-tool-shop-org/budget-wise"
                                 ToolTipService.ToolTip="View source code and report issues" />

                <HyperlinkButton Content="Report an Issue"
                                 NavigateUri="https://github.com/mcp-tool-shop-org/budget-wise/issues/new"
                                 ToolTipService.ToolTip="Report bugs or request features" />

                <HyperlinkButton Content="Releases &amp; Downloads"
                                 NavigateUri="https://github.com/mcp-tool-shop-org/budget-wise/releases"
                                 ToolTipService.ToolTip="Download the latest version" />
            </StackPanel>

            <!-- Tech stack -->
            <StackPanel Spacing="8">
                <TextBlock Text="Built With" Style="{StaticResource SubtitleTextBlockStyle}" />
                <TextBlock TextWrapping="Wrap" Opacity="0.8">
                    • WinUI 3 / Windows App SDK 1.6
                    • .NET 9
                    • SQLite (local database)
                    • CommunityToolkit.Mvvm
                </TextBlock>
            </StackPanel>

            <!-- License -->
            <StackPanel Spacing="8">
                <TextBlock Text="License" Style="{StaticResource SubtitleTextBlockStyle}" />
                <TextBlock TextWrapping="Wrap" Opacity="0.8">
                    BudgetWise is open source software released under the MIT License.
                    You are free to use, modify, and distribute this software.
                </TextBlock>
                <HyperlinkButton Content="View License"
                                 NavigateUri="https://github.com/mcp-tool-shop-org/budget-wise/blob/main/LICENSE" />
            </StackPanel>

            <!-- Data location -->
            <StackPanel Spacing="8">
                <TextBlock Text="Your Data" Style="{StaticResource SubtitleTextBlockStyle}" />
                <TextBlock TextWrapping="Wrap" Opacity="0.8">
                    All your budget data is stored locally on your computer. BudgetWise never sends
                    your financial information to any server. Your data stays yours.
                </TextBlock>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Database location:" Opacity="0.7" VerticalAlignment="Center" />
                    <TextBlock x:Name="DataPathText" Text="" IsTextSelectionEnabled="True"
                               Opacity="0.9" VerticalAlignment="Center" FontFamily="Consolas" FontSize="12" />
                </StackPanel>
                <Button x:Name="OpenDataFolderButton" Content="Open Data Folder" Click="OpenDataFolder_Click"
                        ToolTipService.ToolTip="Open the folder containing your BudgetWise database" />
            </StackPanel>

            <!-- Credits -->
            <StackPanel Spacing="8">
                <TextBlock Text="Credits" Style="{StaticResource SubtitleTextBlockStyle}" />
                <TextBlock TextWrapping="Wrap" Opacity="0.8">
                    Created by mcp-tool-shop with assistance from Claude (Anthropic).
                    Inspired by YNAB and the envelope budgeting methodology.
                </TextBlock>
            </StackPanel>

            <!-- Footer spacer -->
            <Rectangle Height="24" />

        </StackPanel>
    </ScrollViewer>
</Page>
