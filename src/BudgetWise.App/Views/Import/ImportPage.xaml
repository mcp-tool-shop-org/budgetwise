<Page
    x:Class="BudgetWise.App.Views.Import.ImportPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="24" RowDefinitions="Auto,Auto,Auto,*,Auto" RowSpacing="12" MaxWidth="1200" HorizontalAlignment="Left">
        <TextBlock Text="Import (CSV)" FontSize="28" FontWeight="SemiBold" />

        <InfoBar Grid.Row="1"
                IsOpen="True"
                IsClosable="False"
                Severity="Informational"
                Title="Getting started"
                Message="Pick an account, preview your CSV, then import only the rows marked as New."
                Visibility="{Binding Accounts, Converter={StaticResource CollectionNotEmptyToVisibilityConverter}}" />

        <InfoBar Grid.Row="1"
                IsOpen="True"
                IsClosable="False"
                Severity="Warning"
                Title="No accounts found"
                Message="Starter data should be created on first launch. If this still shows, restart the app or open Diagnostics."
                Visibility="{Binding Accounts, Converter={StaticResource CollectionEmptyToVisibilityConverter}}" />

        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="12" Margin="0,64,0,0">
            <ComboBox Width="260"
                      ItemsSource="{Binding Accounts}"
                      SelectedItem="{Binding SelectedAccount, Mode=TwoWay}"
                      DisplayMemberPath="Name"
                      PlaceholderText="Select account"
                      ToolTipService.ToolTip="The account these transactions belong to." />

            <CheckBox Content="Has header row" IsChecked="{Binding HasHeaderRow, Mode=TwoWay}"
                      ToolTipService.ToolTip="Check if your CSV's first row contains column names like Date, Payee, Amount." />

            <Button Content="Pick CSVâ€¦" Click="PickCsv_Click"
                    ToolTipService.ToolTip="Open a file picker to load a CSV file from your computer." />
            <Button Content="Preview" Command="{Binding PreviewCommand}"
                    ToolTipService.ToolTip="Parse the CSV and show what will be imported. Duplicates are automatically detected." />
            <Button Content="Import selected" Click="ImportSelected_Click"
                    ToolTipService.ToolTip="Add the selected rows to your account. Only 'New' rows will be imported." />
        </StackPanel>

        <StackPanel Grid.Row="2" Spacing="8">
            <TextBlock Text="Paste CSV content here" Opacity="0.8" />
            <TextBox Text="{Binding CsvText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True"
                     TextWrapping="NoWrap"
                     FontFamily="Consolas"
                     Height="160" />
        </StackPanel>

        <StackPanel Grid.Row="3" Spacing="8">
            <ProgressBar IsIndeterminate="True" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}" />

            <TextBlock Text="{Binding ErrorText}"
                       Foreground="Tomato"
                       TextWrapping="Wrap"
                       Visibility="{Binding ErrorText, Converter={StaticResource StringToVisibilityConverter}}" />

            <TextBlock Text="{Binding ResultText}"
                       TextWrapping="Wrap"
                       Visibility="{Binding ResultText, Converter={StaticResource StringToVisibilityConverter}}" />

            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Select new" Command="{Binding SelectAllNewCommand}"
                        ToolTipService.ToolTip="Select only transactions that aren't already in your account." />
                <Button Content="Select none" Command="{Binding SelectNoneCommand}"
                        ToolTipService.ToolTip="Deselect all rows." />
            </StackPanel>

            <ListView ItemsSource="{Binding Rows}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="36,70,100,*,140,90" ColumnSpacing="12" Padding="4">
                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" VerticalAlignment="Center" />
                            <TextBlock Grid.Column="1" Text="{Binding RowNumber}" VerticalAlignment="Center" Opacity="0.7" />
                            <TextBlock Grid.Column="2" Text="{Binding DateText}" VerticalAlignment="Center" />
                            <TextBlock Grid.Column="3" Text="{Binding Payee}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <TextBlock Grid.Column="4" Text="{Binding AmountText}" VerticalAlignment="Center" HorizontalAlignment="Right" />
                            <TextBlock Grid.Column="5" Text="{Binding StatusText}" VerticalAlignment="Center" Opacity="0.8" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>

        <TextBlock Grid.Row="4" Text="Tip: supports columns like Date/Payee/Amount[/Memo] or Date/Description/Deposit/Withdrawal" Opacity="0.7" />

        <ContentDialog x:Name="ConfirmImportDialog"
                       Title="Import selected rows?"
                       PrimaryButtonText="Import"
                       CloseButtonText="Cancel"
                       DefaultButton="Primary">
            <TextBlock x:Name="ConfirmImportDialogText" TextWrapping="Wrap" />
        </ContentDialog>
    </Grid>
</Page>
